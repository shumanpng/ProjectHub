<div class="display-members">
  <% users.each do |user| %>
    <!-- get date user joined ProjectHub, in Jan 1, '17 format -->
    <% date_joined = user.created_at.localtime.strftime("%b. %-d, '%y") %>

    <div class="member-container">
      <!-- displays a circle with the first letter of the user's name. the group admin's
      circle is a different color. -->
      <% if user.is_admin == true %>
        <% if user.avatar.blank? %>
          <button type="button" class="letter-container admin-color" data-toggle="popover" data-placement="top" data-html="true"
          data-content="<span><b>Admin</b></span><br><b><%= user.name %></b><br><%= user.email %><br><em>Joined on: </em><%= date_joined %>">
            <p><%= user.name[0] %></p>
          </button>
        <% else %>
          <input type="image" class="letter-container sm-avatar" data-toggle="popover" data-placement="top" data-html="true"
          data-content="<span><b>Admin</b></span><br><b><%= user.name %></b><br><%= user.email %><br><em>Joined on: </em><%= date_joined %>" src="<%= user.avatar %>" onerror="this.onerror=null;this.src='../assets/not-found-small.png'">
          </input>
        <% end %>
      <% else %>
        <% if user.avatar.blank? %>
          <button type="button" class="letter-container" data-toggle="popover" data-placement="top" data-html="true"
          data-content="<b><%= user.name %></b><br><%= user.email %><br><em>Joined on: </em><%= date_joined %>">
            <p><%= user.name[0] %></p>
          </button>
        <% else %>
          <input type="image" class="letter-container sm-avatar" data-toggle="popover" data-placement="top" data-html="true"
          data-content="<b><%= user.name %></b><br><%= user.email %><br><em>Joined on: </em><%= date_joined %>" src="<%= user.avatar %>" onerror="this.onerror=null;this.src='../assets/not-found-small.png'">
          </input>
        <% end %>
      <% end %>
      <% if user.id == curr_user.id %>
        <p>(You)</p>
      <% else %>
        <!-- the split method splits a string by whitespaces into an array -->
        <p><%= user.name.split[0] %></p>
      <% end %>
    </div>
  <% end %>
</div>
