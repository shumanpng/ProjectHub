<div class="display-members">
  <p class="header">GROUP MEMBERS:</p>
  <% group.users.each do |user| %>
    <div class="member-container">
      <!-- displays a circle with the first letter of the user's name. the group admin's
      circle is a different color. -->
      <% if user.id == group.get_admin(group) %>
        <button type="button" class="letter-container admin-color" data-toggle="popover" data-placement="top" data-html="true" data-content="<%= user.id %>">
          <p><%= user.name[0] %></p>
        </button>
      <% else %>
        <button type="button" class="letter-container" data-toggle="popover" data-placement="top" data-html="true" data-content="<%= user.id %>">
          <p><%= user.name[0] %></p>
        </button>
      <% end %>
      <!-- the split method splits a string by whitespaces into an array -->
      <% user.name.split.each do |name| %>
        <p><%= name %></p>
      <% end %>
      <% if user.id == curr_user.id %>
        <p>(You)</p>
      <% end %>
    </div>
  <% end %>
</div>
