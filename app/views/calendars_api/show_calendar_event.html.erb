<!-- views/calendars_api/show_event.html.erb -->
<div class="container mt-5">
  <div class="col-md-6 center">
    <div class="center" style="text-align:center">
      <h3> Calendar Event Details </h3>
    </div>
  </div>
  <div class="col-md-6 center">
    <div class="center" style="text-align:center">
      <p>
      <strong> Summary: </strong>
        <%= @show_calendar_event.summary %>
      </p>

      <p>
      <strong> Description: </strong>
        <% if @show_calendar_event.description != nil %>
          <%= @show_calendar_event.description %>
        <% else %>
           n/a
        <% end %>
      </p>

      <p>
      <strong> Date: </strong>
        <%= @formatted_datetime %>
      </p>

      <% if @show_calendar_event.location != nil %>
        <p>
        <strong> Location: </strong>
          <%= @show_calendar_event.location %>
        </p>
      <% end %>


      <%= link_to 'Back', calendar_events_path('primary'), class:
      "btn btn-primary" %>

      <% eventid = @show_calendar_event.id %>
      <%= link_to('View in Google Calendar', 'https://calendar.google.com/calendar/#{eventid}',
        class: "btn btn-info") %>
    </div>
    </br>
    </br>

  </div>
</div>
