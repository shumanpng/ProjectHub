<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Admin?</strong>
    <% if @user.is_admin %> Yes
    <% else %> No
    <% end %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>Joined on:</strong>
    <%= @user.created_at.localtime.to_date %>
  </p>

  <p>
    <strong>Password:</strong>
    <%= link_to 'Change Password', new_change_password_path%>
  </p>
  <%= link_to 'Edit', edit_user_path(@user), :class=>"btn btn-sm btn-warning", :style=>"cursor:pointer" %>
  <%= link_to 'Back', groups_path, :class=>"btn btn-sm btn-primary", :style=>"cursor:pointer" %>
</div>
