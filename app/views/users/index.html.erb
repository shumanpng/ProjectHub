<p id="notice"><%= notice %></p>


<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>User id</th>
      <th>Name</th>
      <th>Is admin</th>
      <th>Password</th>
      <th>Email</th>
      <th>Date created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.is_admin %></td>
        <td><%= user.password %></td>
        <td><%= user.email %></td>
        <td><%= user.date_created %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

