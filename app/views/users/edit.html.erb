<div class="container">
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="container mt-5">
      <div class="col-md-6">
        <h2>User Settings</h2>

        <!-- display avatar -->
        <div class="mt-4 mb-4">
          <% if @user.avatar.blank? %>
            <!-- user has no avatar; display default (first letter of name)-->
            <div class="letter-container avatar ml-2">
              <p><%= @user.name[0] %></p>
            </div>
          <% else %>
            <img class="avatar ml-2" src="<%= @user.avatar %>">
          <% end %>
        </div>

        <div class="field form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="field form-group">
          <%= f.label :email %><br>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="field form-group">
          <%= f.label :avatar, 'Profile Picture URL' %>
          <%= f.url_field :avatar, class: 'form-control', placeholder: 'https://' %>
        <br>
        <div class="actions">
          <%= f.submit("Save Changes", :class=>"btn btn-sm btn-warning", :style=>"cursor:pointer") %>
          <%= link_to 'Back', user_path(@user), :class=>"btn btn-sm btn-primary"%>
        </div>
      </div>
    </div>
  <% end %>
  <br>
</div>
