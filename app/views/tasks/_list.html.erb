<%# app/views/tasks/_list.html.erb %>
<%# code from: http://filterrific.clearcove.ca/pages/action_view_api.html %>

<div id="filterrific_results">

  <div>
     <%= page_entries_info tasks %>
   </div>

  <table>
    <tr>
      <th style="width:180px">Title</th>
      <th style="width:200px">Description</th>
      <th style="width:130px">Created by</th>
      <th style="width:150px">Deadline</th>
      <th style="width:70px">Points</th>
      <th style="wdith:100px">Group</th>
      <th style="width:100px">State</th>
      <th style="width:130px">Assignee</th>

    </tr>

    <% tasks.each do |task| %>

        <% user = User.where(:id => task.assigned_to).take %>
        <tr>
          <td><%= link_to(task.title, task_path(task)) %></td>
          <td><%= task.description %></td>
          <td><%= task.created_by %></td>
          <td><%= task.deadline %></td>
          <td><%= task.points %></td>
          <td><%= task.group %></td>
          <td><%= task.state %></td>
          <td>
            <% if user == nil %>
              <%= %>
            <% else %>
              <%= user.name %>
            <% end %>
          </td>
      </tr>
    <% end %>
  </table>
</div>

<%= will_paginate tasks %>
