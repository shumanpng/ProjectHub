

<p class="text-info">(OPEN)</p>
<table class="table table-sm table-striped">
  <thead class="thead-dark">
    <tr>
      <th style="font-weight:normal;width:300px">Title</th>
      <!-- <th style="width:200px">Description</th> -->
      <th style="font-weight:normal;width:200px">Created by</th>
      <th style="font-weight:normal;width:175px">Deadline</th>
      <th style="font-weight:normal;width:125px">Points</th>
      <!-- <th style="wdith:180px">Group</th> -->
      <th style="font-weight:normal;width:200px">Assignee</th>
      <th></th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @opentasks.each do |task| %>
      <% user = User.where(:id => task.assigned_to).take %>

      <tr>
        <td><%= link_to(task.title, task_path(task)) %></td>
        <!-- <td><%#= task.description %></td> -->
        <td><%= task.created_by %></td>
        <td><%= task.deadline.to_date %></td>
        <td>
          <% if task.points.blank? %>n/a
          <% else %><%= task.points %>
          <% end %>
        </td>
        <!-- <td><%#= task.group %></td> -->

        <td>
          <% if user == nil %>
            n/a
          <% else %>
            <%= user.name %>
          <% end %>
        </td>
        <!-- <td><%#= link_to 'Show', task %></td> -->
        <!-- <td><%#= link_to 'Edit', edit_task_path(task, :groupname => task.group) %></td> -->
        <td>
          <%= link_to '<i class="fa fa-pencil fa-fw></i>"'.html_safe, edit_task_path(task.id) %>
        </td>
        <td>
          <%= link_to '<i class="fa fa-trash-o fa-fw"></i>'.html_safe, task, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

