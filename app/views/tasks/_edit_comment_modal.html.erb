<div class="modal fade" id="modalcomment<%= comment.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" style="text-align:center" id="exampleModalLongTitle">Edit Comment</h5>
        <button type="button" class="close cursor-pointer" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">

        <%= form_tag update_comment_path do %>

          <%= hidden_field_tag 'id', comment.id %>
          <%= hidden_field_tag 'taskid', comment.task_id %>

          <div class="field form-group">
            <%= text_area_tag :task_comment, comment.task_comment, class: 'form-control', required: true %>
          </div>
          <div class="actions">
            <%= submit_tag 'Save Changes', class: 'btn btn-warning btn-sm form-control cursor-pointer' %>
          </div>
        <% end %>

      </div>

    </div>
  </div>
</div>
