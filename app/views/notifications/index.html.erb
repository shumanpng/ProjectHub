<div class="container mt-5">
  <div class="col-md-6 center">
    <div id="allNotifications">
      <h2 style="text-align:center">Your Notifications</h2><br>
      <ul class="list-group">
      <% @all_notifications.each do |notification| %>
        <li class="list-group-item">
          <%= notification.message%> <br>
          <% @time = notification.created_at.localtime %>
          <em style="color:#a3a3a3"><%= distance_of_time_in_words(Time.now, @time) %> ago</em>
          <%#= notification.created_at%>
        </li>
      <% end %>
      </ul>
      <br><%= link_to 'Go to Dashboard', groups_path, class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
</div>
