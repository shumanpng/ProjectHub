
<div class="container">
  <p id="notice"><%= notice %></p>
  <br>
  <div class="row">
    <div class="col-md-6">
      <div class="bd-pageheader">
        <h1>Events</h1>
        <p class="lead">This is where you can organize company events.</p>
      </div>
    </div>
  </div>
  <table class="table table-sm table-hover">
    <thead class="thead-dark">
      <tr>
        <th style="font-weight:normal">Name</th>
        <th style="font-weight:normal">Description</th>
        <th style="font-weight:normal">Date</th>
        <th style="font-weight:normal">Location</th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td>
            <%= link_to event.name, event %>
          </td>
          <td><%= event.description %></td>
          <% eventtime = event.date %>
          <% eventtimestring = eventtime.to_s(:db) %>
          <% eventtimeparsed = DateTime.parse(eventtimestring) %>
          <% formatted_datetime = eventtimeparsed.strftime('%a %b %d, %Y | %I:%M%P') %>
          <td><%= formatted_datetime %></td>
          <td>
            <small>
              <strong><%= event.location_name %></strong><br>
              <%= event.location_address %><br>
              <%= event.location_city %>,
              <%= event.location_province %>
              <%= event.location_postal_code %></td>
            </small>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Back', groups_path, :class => 'btn btn-sm btn-primary' %>
  <%= link_to 'New Event', new_event_path, :class=>"btn btn-success btn-sm" %>
</div>
